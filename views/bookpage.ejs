        <title>Document</title>
        <style>
          .loader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #333333;
            transition: opacity 0.75s, visibility 0.75s;
          }
      
          .loader--hidden {
            opacity: 0;
            visibility: hidden;
          }
      
          .loader::after {
            content: "";
            width: 75px;
            height: 75px;
            border: 15px solid #dddddd;
            border-top-color: #009578;
            border-radius: 50%;
            animation: loading 0.75s ease infinite;
          }
      
          @keyframes loading {
            from {
              transform: rotate(0turn);
            }
      
            to {
              transform: rotate(1turn);
            }
          }
          body {
    background: #eee
}
    .iimg{
        width: 280px;
        height: 440px;    }
        </style>
      
      
      
      
      </head>
      
      <body>
        <div class="loader"></div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mt-5 ml-5 mr-5">
            <div class="container-fluid"> <a class="navbar-brand" href="#"><b>Library management system </b></a> <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"> <span class="navbar-toggler-icon"></span> </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="col-lg-10">
                    <ul class="navbar-nav  ml-5 mr-auto mb-2 mb-lg-0">
                        <li class="nav-item "> <a class="nav-link " aria-current="page" href="/home">Home</a> </li>
                        <li class="nav-item"> <a class="nav-link" href="/home">dashboard</a> </li>
                        <li class="nav-item"> <a class="nav-link" href="/home">account</a> </li>
                        <li class="nav-item"> <a class="nav-link active" href="/book">book</a> </li>
                    </ul></div>
                    <div class="col-lg-2">
                    <form class="d-flex align-items-cente"> <input class="form-control mr-2" type="search" id="searchInput" placeholder="Search" aria-label="Search"> <button class="btn btn-outline-success" type="button" onclick="searchBooks()">Search</button> </form>
                </div>
              </div>
            </div>
        </nav>
        

        <div class="row justify-content-center align-items-center"style="margin-left: 150px;>
            <div class="container>
        <% for(let i=0; i< jsonData.length; i++) { %>
            <div class="col-lg-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top iimg" src="<%= jsonData[i].img_url %>" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title"><%= jsonData[i].b_name %></h5>
                      <p class="card-text"><span class="card-author"><b> Author: </b><i><%= jsonData[i].author %></i></span>
                         <br>
                         <span class="card-language"> <b>Language:</b> <i><%= jsonData[i].language %></i></span> 
                         <br>
                        <span class="card-genre"> <b>Genre:</b> <i><%= jsonData[i].genre %></i></span>
                        <hr>
                        <%= jsonData[i].brief %></p>
                      
                    </div>
                  </div>
            </div>
        
        <% }%>
            </div>
    </div>
    </div>
      
        </div>
      
      
      
      
      
      
        <script>window.addEventListener("load", () => {
            const loader = document.querySelector(".loader");
      
            loader.classList.add("loader--hidden");
      
            loader.addEventListener("transitionend", () => {
              document.body.removeChild(loader);
            });
          });

          function searchBooks() {
    var input = document.getElementById('searchInput').value.toLowerCase();
    var cards = document.querySelectorAll('.card');
    
    cards.forEach(function(card) {
      var title = card.querySelector('.card-title').textContent.toLowerCase();
      var author = card.querySelector('.card-author').textContent.toLowerCase();
      var language= card.querySelector('.card-language').textContent.toLowerCase();
      var genre= card.querySelector('.card-genre').textContent.toLowerCase();



      
      if (title.includes(input)||author.includes(input) || language.includes(input) || genre.includes(input)) {
        card.style.display = 'block';
      } else {
        card.style.display = 'none';
      }
    });
  }
        </script>
      </body>
</html>